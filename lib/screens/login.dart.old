import 'package:dio/dio.dart';
import 'package:flutter/material.dart';
import 'package:flutter/widgets.dart';
import 'package:flutter_hooks/flutter_hooks.dart';
import 'package:gluttony_app/config.dart';
import 'package:gluttony_app/shared/Layout.dart';
import 'package:webview_flutter/webview_flutter.dart';

class LoginScreen extends HookWidget {
  LoginScreen({super.key});

  final form = GlobalKey<FormState>();

  @override
  Widget build(BuildContext context) {
    var username = useState('');
    var password = useState('');

    void submit() async {
      if (form.currentState!.validate()) {
        final messenger = ScaffoldMessenger.of(context);

        messenger.showSnackBar(const SnackBar(content: Text('Logging in...')));

        Navigator.of(context).push((c) => WebView(initialUrl: "$apiHost/auth/signIn"))
      }
    }

    return Layout(
        body: Form(
            key: form,
            child: Column(children: [
              TextFormField(
                onChanged: (value) => username.value = value,
                validator: (value) {
                  if (value == null || value.isEmpty) {
                    return 'Please enter a username';
                  }
                  return null;
                },
              ),
              TextFormField(
                obscureText: true,
                onChanged: (value) => password.value = value,
                validator: (value) {
                  if (value == null || value.isEmpty) {
                    return 'Please enter a password';
                  }
                  return null;
                },
              ),
              ElevatedButton(onPressed: submit, child: const Text('Submit'))
            ])));
  }
}
